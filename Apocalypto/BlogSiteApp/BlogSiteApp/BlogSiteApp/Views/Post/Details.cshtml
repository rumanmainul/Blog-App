@using System.Text.RegularExpressions
@using BlogSiteApp.Migrations
@using BlogSiteApp.Models
@using BlogSiteApp.Models.ViewModel
@using Microsoft.Ajax.Utilities
@model IEnumerable<BlogSiteApp.Models.Post>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

